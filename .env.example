# Environment Configuration
NODE_ENV=dev
PORT=3000

# Database Configuration (MySQL)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=lawent_showcase

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
PRIVATE_KEY=your-private-key
PUBLIC_KEY=your-public-key
ISSUER=lawent-showcase

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_USER=
REDIS_PASS=
REDIS_PORT=6379

# Mailgun Configuration (Optional)
MAILGUN_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM=noreply@your-domain.com

# Paystack Configuration
PAYSTACK_KEY=your-paystack-secret-key
PAYSTACK_BASEURL=https://api.paystack.co
PAYSTACK_PREFFERED_BANK=your-preferred-bank

# Escrow Configuration
ESCROW_PROVIDER=NONE
ESCROW_API_KEY=your-escrow-api-key
ESCROW_BASEURL=https://api.escrow-provider.com

# Firebase Configuration (Optional)
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FCM_PROJECT_ID=your-firebase-project-id
FIREBASE_BASE_URL=https://your-project.firebaseapp.com
FIREBASE_API_KEY=your-firebase-api-key

# Frontend URL
FRONTEND_URL=http://localhost:3000
